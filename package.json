{
  "name": "plant-tracker-web",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:capacitor": "next build",
    "build:netlify": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lighthouse": "lighthouse http://localhost:3000 --output=csv --output-path=./lighthouse-audit.csv",
    "lighthouse:budget": "lighthouse http://localhost:3000 --budget-path=./performance-budget.json --output=html --output-path=./lighthouse-budget-report.html",
    "perf:test": "chmod +x ./scripts/performance-test.sh && ./scripts/performance-test.sh",
    "perf:ci": "npm run build && npm run perf:test",
    "bundle:analyze": "ANALYZE=true npm run build",
    "bundle:size": "npx bundlesize",
    "precommit": "npm run lint && npm run type-check",
    "preview": "npm run build && npm run start",
    "clean": "rm -rf .next out lighthouse-reports",
    "postbuild": "echo 'Build completed successfully!'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "health-check": "npm run lint && npm run type-check && npm run test && npm run build",
    "deploy:check": "npm run health-check && npm run perf:test",
    "dev:mock": "cross-env SUPABASE_URL=http://localhost:54321 SUPABASE_ANON_KEY=local_anonymous next dev",
    "release": "semantic-release",
    "test:e2e": "playwright test --reporter=list",
    "ci": "pnpm install --frozen-lockfile && pnpm test && pnpm build && pnpm test:e2e && lighthouse-ci https://localhost:3000 --preset=desktop"
  },
  "bundlesize": [
    {
      "path": ".next/static/js/*.js",
      "maxSize": "300 kB",
      "compression": "gzip"
    },
    {
      "path": ".next/static/css/*.css",
      "maxSize": "50 kB",
      "compression": "gzip"
    }
  ],
  "dependencies": {
    "@capacitor/core": "7.4.3",
    "@capacitor/ios": "7.4.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@supabase/supabase-js": "^2.49.8",
    "@tanstack/react-query": "^5.28.4",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.8.2",
    "browser-image-compression": "^2.0.0",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "date-fns": "^3.6.0",
    "framer-motion": "^10.18.0",
    "next": "^14.2.29",
    "next-pwa": "^5.6.0",
    "postcss": "^8.4.32",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swr": "^2.2.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.8.2",
    "@capacitor/cli": "7.4.3",
    "@next/bundle-analyzer": "^14.0.4",
    "@playwright/test": "^1.41.2",
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/addon-interactions": "^7.6.6",
    "@storybook/addon-links": "^7.6.6",
    "@storybook/blocks": "^7.6.6",
    "@storybook/nextjs": "^7.6.6",
    "@storybook/react": "^7.6.6",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "bundlesize": "^0.18.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "playwright": "^1.41.2",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "semantic-release": "^23.0.0",
    "storybook": "^7.6.6",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
